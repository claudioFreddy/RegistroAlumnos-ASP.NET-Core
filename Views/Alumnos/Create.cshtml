@model RegistroAlumnos.Models.Alumno

<h2>Nuevo Alumno</h2>  

<form asp-action="Create" method="post" class="col-md-6">
    @Html.AntiForgeryToken()
    
    <div class="row mb-3">
        <label asp-for="Nombre" class="col-sm-4 col-form-label text-end"></label>
        <div class="col-sm-8">
            <input asp-for="Nombre" class="form-control" />
        </div>
    </div>

    <div class="row mb-3">
        <label asp-for="Apellido" class="col-sm-4 col-form-label text-end"></label>
        <div class="col-sm-8">
            <input asp-for="Apellido" class="form-control" />
        </div>
    </div>

    <div class="row mb-3">
        <label asp-for="Rut" class="col-sm-4 col-form-label text-end"></label>
        <div class="col-sm-8">
            <input asp-for="Rut" class="form-control" />
        </div>
    </div>

    <div class="row mb-3">
        <label asp-for="Email" class="col-sm-4 col-form-label text-end"></label>
        <div class="col-sm-8">
            <input asp-for="Email" class="form-control" type="email" />
        </div>
    </div>

    <div class="row">
        <div class="col-sm-8 offset-sm-4">
            <button type="submit" class="btn btn-primary">Guardar</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Volver al listado</a>
        </div>
    </div>

</form>


